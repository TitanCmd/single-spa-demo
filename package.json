{
  "name": "single-spa-demo",
  "version": "1.0.0",
  "description": "Demo of single-spa microfrontend architecture for efficiently frontend interview",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "concurrently -n \"root,navigation\" \"pnpm run start:root\" \"pnpm run start:navigation\"",
    "start:root": "cd packages/shell/titanco-root-app && pnpm start",
    "start:navigation": "cd packages/microfrontends/titanco-navigation && pnpm run serve:standalone",
    "build": "concurrently -n \"root,navigation\" \"pnpm run build:root\" \"pnpm run build:navigation\"",
    "build:root": "cd packages/shell/titanco-root-app && pnpm run build",
    "build:navigation": "cd packages/microfrontends/titanco-navigation && pnpm run build",
    "test": "concurrently -n \"root,navigation\" \"pnpm run test:root\" \"pnpm run test:navigation\"",
    "test:root": "cd packages/shell/titanco-root-app && pnpm run test",
    "test:navigation": "cd packages/microfrontends/titanco-navigation && pnpm run test:unit",
    "lint": "concurrently -n \"root,navigation\" \"pnpm run lint:root\" \"pnpm run lint:navigation\"",
    "lint:root": "cd packages/shell/titanco-root-app && pnpm run lint",
    "lint:navigation": "cd packages/microfrontends/titanco-navigation && pnpm run lint",
    "format": "concurrently -n \"root,navigation\" \"pnpm run format:root\" \"pnpm run format:navigation\"",
    "format:root": "cd packages/shell/titanco-root-app && pnpm run format",
    "format:navigation": "cd packages/microfrontends/titanco-navigation && pnpm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.5.0",
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "concurrently": "^8.2.2",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^29.7.0",
    "prettier": "^2.3.2",
    "webpack-cli": "^5.1.4"
  }
}
